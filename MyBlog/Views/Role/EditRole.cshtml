@model MyBlog.BLL.ViewModels.RoleEditViewModel

@{
    ViewData["Title"] = "Edit role";
}

<form method="post" asp-controller="Role" asp-action="UpdateRole">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <div class="mb-3">
            <input type="hidden" asp-for="IdRole">
            <label for="inputName" class="form-label">Название</label>
            <input asp-for="Name" class="form-control" id="inputName">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="inputDescription" class="form-label">Описание</label>
            <input asp-for="Description" class="form-control" id="inputDescription">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
<br />
<a class="link-primary text-decoration-none" asp-area="" asp-controller="Role" asp-action="GetAllRoles">Перейти к списку всех ролей</a>