@model MyBlog.BLL.ViewModels.TagNewViewModel

@{
    ViewData["Title"] = "New tag";
}

<form method="post" asp-controller="Tag" asp-action="NewTag">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label for="inputName" class="form-label">Название</label>
        <input asp-for="Name" class="form-control" id="inputName">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
<br/>
<a class="link-primary text-decoration-none" asp-area="" asp-controller="Tag" asp-action="GetAllTags">Перейти к списку всех тегов</a>