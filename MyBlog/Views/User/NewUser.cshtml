@model MyBlog.BLL.ViewModels.UserNewViewModel

@{
    ViewData["Title"] = "New user";
}

<h3>Новый пользователь</h3>
<form method="post" asp-controller="User" asp-action="NewUser">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        @foreach (var role in Model.AllRoles)
        {
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="SelectedNameRoles" value="@role.Name"
                    @if (role.Name == "employee")
                    {
                        <text>checked disabled</text>
                    }
                    />
                    @role.Name
                </label>
            </div>
        }
    </div>
    <div class="mb-3">
        <label for="inputName" class="form-label">Имя</label>
        <input asp-for="FirstName" class="form-control" id="inputName">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="inputLastName" class="form-label">Фамилия</label>
        <input asp-for="LastName" class="form-control" id="inputLastName">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="inputEmail" class="form-label">Электронный адрес</label>
        <input asp-for="EmailReg" class="form-control" id="inputEmail" aria-describedby="emailHelp">
        <span asp-validation-for="EmailReg" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="inputPassword" class="form-label">Пароль</label>
        <input asp-for="PasswordReg" class="form-control" id="inputPassword">
        <span asp-validation-for="PasswordReg" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="inputPasswordConfirm" class="form-label">Подтвердите пароль</label>
        <input asp-for="PasswordConfirm" class="form-control" id="inputPasswordConfirm">
        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        <div id="passwordHelpBlock" class="form-text">Обязательно подтвердите Ваш пароль</div>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
<br />
<a class="link-primary text-decoration-none" asp-area="" asp-controller="User" asp-action="GetAllUsers">Перейти к списку всех пользователей</a>
